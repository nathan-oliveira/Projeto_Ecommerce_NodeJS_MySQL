                  <div class="product-content">
                    <br>
                    <h1>Nike Airmax</h1>
                    <br>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit ariaturLorem ipsum dolor sit amet consectetur adipisicing elit ariaturLorem ipsum dolor sit amet consectetur adipisicing elit ariatur....</p>
                    <div class="buttons">
                      <a onclick="carrinho()" class="button add" href="#">Adicionar no carrinho</a>
                      <span class="button" id="price">$59,99</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="relogios">
              <div class="product">
                <div class="img-container zoom">
                  <img src="https://images.unsplash.com/photo-1434493907317-a46b5bbe7834?dpr=1&auto=compress,format&fit=crop&w=1500&h=&q=80&cs=tinysrgb&crop=">
                </div>
                <div class="product-info">
                  <div class="product-content">
                    <br>
                    <h1>Apple Watch 3</h1>
                    <br>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit ariaturLorem ipsum dolor sit amet consectetur adipisicing elit ariaturLorem ipsum dolor sit amet consectetur adipisicing elit ariatur....</p>
                    <div class="buttons">
                      <a onclick="carrinho()" class="button add">Adicionar no carrinho</a>
                      <span class="button" id="price">$129,99</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        function carrinho() {
          Swal.fire({
            width: 400,
            icon: 'success',
            title: 'Produto',
            text: 'Adicionado no carrinho com sucesso!'
          })
        }

        $(function() {
          cliqueMenu();
          document.getElementById("variados").click();
        });

        function cliqueMenu() {
          $('#menu-principal a, .list-group a').click(function() {
            $('.list-group a').removeClass('active')
            $('.list-group a[ref_sys='+$(this).attr('ref_sys')+']').addClass('active')

            switch ($(this).attr('ref_sys')) {
              case $("#variados").val(): variados(); break;
              case $("#relogio").val(): relogio(); break;
              case $("#camiseta").val(): camiseta(); break;
              case $("#tenis").val(): tenis(); break;
              default:
                break;
            }

            return false;

          })
        }

        function variados() {
          $(".invisivel").removeClass('invisivel');
          $('#breadcrum_li').html('Produtos Variados');
        }

        function relogio() {
          $('.relogios').removeClass('invisivel');
          $('.tenis').addClass('invisivel');
          $('.camisetas').addClass('invisivel');

          $('#breadcrum_li').html('Relógios');
        }

        function camiseta() {
          $('.relogios').addClass('invisivel');
          $('.tenis').addClass('invisivel');
          $('.camisetas').removeClass('invisivel');

          $('#breadcrum_li').html('Camisetas');
        }

        function tenis() {
          $('.tenis').removeClass('invisivel')
          $('.relogios').addClass('invisivel');
          $('.camisetas').addClass('invisivel');

          $('#breadcrum_li').html('Tênis');
        }
      </script>
