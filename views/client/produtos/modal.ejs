<!-- Modal -->
<div class="modal fade" id="modalProdutos" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <!-- Fotos -->
          <div class="col-sm-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" alt="First slide" id="url1">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" alt="Second slide" id="url2">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" alt="Third slide" id="url3">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <i class="fas fa-angle-left" style="font-size: 30px; background-color: #5996b6c4; border-radius: 10px;"></i>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <i class="fas fa-angle-right" style="font-size: 30px; background-color: #5996b6c4; border-radius: 10px;"></i>
              </a>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
              <div class="col p-4 d-flex flex-column position-static">
                <h5 class="d-inline-block mb-2 text-primary" id="nome_produto"></h5>
                <div class="mb-1 text-muted" id="preco_produto" style="margin-top: 10px;"></div>
                <p class="card-text mb-auto" id="descricao_produto" style="margin-top: 10px;"></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-sm-6">
          <button type="button" class="btn btn-blue" data-dismiss="modal" style="color: #fff;">fechar</button>
        </div>
        <div class="col-sm-6 text-right" id="submit_compra"></div>
      </div>
    </div>
  </div>
</div>

